<service name="foo">
	<enum name="Religion">
		<member name="JEW" />
		<member name="MUSLIM" />
		<member name="CHRISTAIN" />
	</enum>
	
	<record name="Person">
		<attr name="name" type="str" />
		<attr name="id" type="int32" />
		<attr name="birthdate" type="date" />
		<attr name="religion" type="Religion" />
	</record>

	<class name="File">
		<attr name="filename" type="str" get="yes" set="no" />
		<method name="read" type="buffer">
			<arg name="count" type="int32" />
		</method>
		<method name="write" type="void">
			<arg name="data" type="buffer" />
		</method>
	</class>

	<func name="open" type="File">
		<arg name="filename" type="string" />
		<arg name="mode" type="string" />
	</func>

	<func name="getPerson" type="Person">
		<arg name="id" type="int32" />
	</func>

</service>
