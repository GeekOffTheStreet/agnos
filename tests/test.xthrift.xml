<project name="xtest">

	<record name="Person">
	   <attr name="first_name" type="string"/>
       <attr name="last_name" type="string"/>
	   <attr name="birth_date" type="datetime"/>
	</record>
	
	<class name="File">
	   <attr name="filename" get="yes" set="no"/>
	   <method name="read" type="bytes">
	       <arg name="count" type="int32"/>
	   </method>
       <method name="write" type="void">
           <arg name="data" type="bytes"/>
       </method>
	</class>
	
    <func name="open" type="File">
        <arg name="filename" type="string"/>
        <arg name="mode" type="string" default="'r'"/>
    </func>

</project>














