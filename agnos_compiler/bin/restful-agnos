import sys
from optparse import OptionParser


parser = OptionParser()

parser.add_option("--host", dest="host", help="the hostname to bind to (default 0.0.0.0)", metavar="HOST")
parser.add_option("-p", "--port", dest="port", help="the port to bind to (required)", metavar="PORT")
parser.add_option("-m", "--module", dest="modname", help="the bindings module to use (required)", metavar="MODULE")

parser.add_option("--sock", dest="url", help="the real server's URL", metavar="URL")
parser.add_option("--exec", dest="executable", help="the executable to spawn. "
    "to pass arguments, simply surround the value with quotes, and separate "
    "the arguments with spaces", metavar="CMDLINE")
parser.add_option("--url", dest="url", help="the URL to connect to", metavar="URL")


if __name__ == "__main__":
    (options, args) = parser.parse_args()
    import FeatureTest_bindings
    server = RESTfulAgnosServer.connect_executable(FeatureTest_bindings, "python", ["server.py", "-m", "lib"])
    server.start()






